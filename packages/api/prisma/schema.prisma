generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Video {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("video")
}

model Project {
  id            Int      @id @default(autoincrement())
  title         String
  scriptContent String
  status        String   @default("draft")
  config        Json     @default("{}")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  scenes Scene[]

  @@map("project")
}

model Scene {
  id              Int      @id @default(autoincrement())
  projectId       Int
  sceneNumber     Int
  title           String
  narrativeText   String
  startTimestamp  String?
  endTimestamp    String?
  tags            Json     @default("[]")
  imagePrompt     String?
  animationPrompt String?
  audioUrl        String?
  status          String   @default("pending")
  selectedImageId Int?
  selectedClipId  Int?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  project   Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  images    GeneratedImage[]
  clips     GeneratedClip[]

  @@map("scene")
}

model GeneratedImage {
  id                     Int      @id @default(autoincrement())
  sceneId                Int
  model                  String
  prompt                 String
  imageUrl               String?
  replicatePredictionId  String?
  status                 String   @default("pending")
  isSelected             Boolean  @default(false)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  scene      Scene           @relation(fields: [sceneId], references: [id], onDelete: Cascade)
  clips      GeneratedClip[]

  @@map("generated_image")
}

model GeneratedClip {
  id                     Int      @id @default(autoincrement())
  sceneId                Int
  sourceImageId          Int
  model                  String
  animationPrompt        String
  clipUrl                String?
  replicatePredictionId  String?
  status                 String   @default("pending")
  isSelected             Boolean  @default(false)
  createdAt              DateTime @default(now())
  updatedAt              DateTime @updatedAt

  scene       Scene          @relation(fields: [sceneId], references: [id], onDelete: Cascade)
  sourceImage GeneratedImage @relation(fields: [sourceImageId], references: [id], onDelete: Cascade)

  @@map("generated_clip")
}
